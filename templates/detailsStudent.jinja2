<html>
    <head>
        <title>Modification de données</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <style>
            h1 {text-align: center;}
        </style>
    </head>
    <body>
        <HR>
        <h1>Modification des données</h1>
        <HR>
        <div class ="row">
            <div class="col">
                <div class = "card">
                    <div class="card-body">
                        <form method = "POST">
                            <h3 class="card-header">{{ personne[1]}} {{ personne[2] }}</h3>
                          <div class="mb-3">
                              <br>
                              <h5>Informations personnelles</h5>
                              <HR>
                              <div class = "row align-items-center">
                                  <div class = "col-auto">
                                      <div class="form-check">
                                          <input class="form-check-input" type="radio" name="Genre" id="mr" checked disabled>
                                          <label class="form-check-label" for="mr">
                                            Mr
                                          </label>
                                        </div>
                                  </div>
                                  <div class = "col-auto">
                                    <div class="form-check">
                                      <input class="form-check-input" type="radio" name="Genre" id="mme" disabled>
                                      <label class="form-check-label" for="mme">
                                        Mme
                                      </label>
                                    </div>
                                  </div>
                              </div>
                              <br>
                              <div class="row align-items-center">
                                  <div class = "col-auto">
                                    <label for="Name" class="form-label">Nom :</label>
                                  </div>
                                  <div class = "col-auto">
                                        <b>{{ personne[2] }}</b>
                                  </div>
                                  <div class = "col-auto">
                                    <label for="Prenom" class="form-label">Prénom :</label>
                                  </div>
                                  <div class = "col-auto">
                                    <b>{{ personne[1] }}</b>
                                  </div>
                              </div>
                              <br>
                              <div class = "row align-items-center">
                                  <div class = "col-auto">
                                    <label for="Date" class="form-label">Date de Naissance :</label>
                                  </div>
                                  <div class = "col-auto">
                                    <b>{{ personne[10] }}</b>
                                  </div>
                              </div>
                                <br>
                              <HR>
                              <h5>Scolarité</h5>
                              <HR>
                              <div class = "row align-items-center">
                                  <div class = "col-auto">
                                      <label for="taf1" class="form-label">TAF 2A :</label>
                                  </div>
                                  <div class = "col-auto">
                                      <b>{{ personne[4] }}</b>
                                  </div>
                                  <div class = "col-auto">
                                      <label for="taf1" class="form-label">Année :</label>
                                  </div>
                                  <div class = "col-auto">
                                      <b>{{ personne[11] }}</b>
                                  </div>
                              </div>
                              <br>
                              <div class="row align-items-center">
                                  <div class = "col-auto">
                                      <label for="taf2" class="form-label">TAF 3A :</label>
                                  </div>
                                  <div class = "col-auto">
                                       <b>{{ personne[5] }}</b>
                                  </div>
                                  <div class = "col-auto">
                                      <label for="taf1" class="form-label">Année :</label>
                                  </div>
                                  <div class = "col-auto">
                                      <b>{{ personne[12] }}</b>
                                  </div>
                              </div>
                              <br>
                            <div class = "row align-items-center">
                                <div class = "col-auto">
                                    <label for="promo" class="form-label">Promo :</label>
                                </div>
                                <div class = "col-sm-1">
                                    <b>{{ personne[3] }}</b>
                                </div>
                            </div>
                              <br>
                              <HR>
                              <h5>Projet de fin d'étude</h5>
                              <HR>
                              <div class="row align-items-center">
                                <div class = "col-sm-1">
                                    <label for="stage" class="form-label">Titre :</label>
                                </div>
                                <div class = "col-sm-11">
                                    <b>{{ personne[9].titre }}</b>
                                </div>
                            </div>
                              <br>
                              <div class = "row align-items-center">
                                  <div class="col-sm-1">
                                      <label for="description" class="form-label">Description :</label>
                                  </div>
                                  <div class = "col-sm-11">
                                      <textarea autocomplete="off" class="form-control" id="description" rows="5" wrap="soft" name="description" disabled>{{ personne[9].description }}</textarea>
                                  </div>
                              </div>
                              <br>
                              <div class="row align-items-center">
                                  <div class="col-sm-1">
                                      <label for="tuteur" class="form-label">Tuteur :</label>
                                  </div>
                                  <div class="col-auto">
                                      <b>{{ personne[9].tuteur }}</b>
                                  </div>
                              </div>
                              <br>
                              <div class="row align-items-center">
                                  <div class="col-sm-1">
                                      <label for="entreprise_stage" class="form-label">Entreprise</label>
                                  </div>
                                  <div class="col-auto">
                                      <b>{{ personne[9].entreprise_stage }}</b>
                                  </div>
                              </div>
                              <br>
                              <HR>
                              <h5>Vie Professionnelle</h5>
                              <HR>
                            <div class = "row align-items-center">
                                <div class = "col-auto">
                                    <label for="position" class="form-label">Position:</label>
                                </div>
                                <div class = "col-auto">
                                    <b>{{ personne[8][0] }}</b>
                                </div>
                                <div class = "col-auto">
                                    <label for="aneePosition" class="form-label">Année d'entrée:</label>
                                </div>
                                <div class = "col-auto">
                                    <b>{{ personne[13] }}</b>
                                </div>
                            </div>
                            <br>
                            <div class = "row align-items-center">
                                <div class = "col-auto">
                                    <label for="entreprise" class="form-label">Entreprise:</label>
                                </div>
                                <div class = "col-auto">
                                    <b>{{ personne[7][0] }}</b>
                                </div>
                            </div>
                          </div>
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <button type="button" class="btn btn-primary" onclick="window.location.href='{{ url_for( 'dashboard' ,isAdmin=isAdmin, current_id=current_id ) }}';">Retour</button>
                                </div>
                                {% if isAdmin=='True' %}
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-primary"  onclick="window.location.href='{{ url_for( 'userModif' , id=personne[0],current_id=current_id ) }}';">Modifier</button>
                                    </div>
                                    <div class="col-auto">
                                        <button type="submit" class="btn btn-danger" onclick="window.location.href='{{ url_for( 'deletepersonne' , id=personne[0],current_id=current_id ) }}';">Supprimer</button>
                                    </div>
                                {% endif %}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>