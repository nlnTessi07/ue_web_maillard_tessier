<html>
    <head>
        <title>Tableau de Bord</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <style>
            h1 {text-align: center;}
        </style>
    </head>
        <HR>
        <h1>Tableau de bord</h1>
        <HR>
        <div class ="row">
            <div class="col">
                <div class = "card">
                    <div class="card-body">
                        <form method = "POST">
                            <h4 class="card-header">Mes informations</h4>
                          <div class="mb-3">
                              <br>
                              <div class = "row align-items-center">
                                  <div class = "col-auto">
                                      <div class="form-check">
                                          <input class="form-check-input" type="radio" name="Genre" id="mr" checked disabled>
                                          <label class="form-check-label" for="mr">
                                            Mr
                                          </label>
                                        </div>
                                  </div>
                                  <div class = "col-auto">
                                    <div class="form-check">
                                      <input class="form-check-input" type="radio" name="Genre" id="mme" disabled>
                                      <label class="form-check-label" for="mme">
                                        Mme
                                      </label>
                                    </div>
                                  </div>
                                  <div class = "col-auto">
                                    Date de Naissance :
                                  </div>
                                  <div class = "col-auto">
                                      <b>29/10/2002</b>
                                  </div>
                               </div>
                              <br>
                              <div class="row align-items-center">
                                  <div class = "col-auto">
                                    Nom :
                                  </div>
                                  <div class = "col-auto">
                                      <b>Maillard</b>
                                  </div>
                                  <div class = "col-auto">
                                    Prénom :
                                  </div>
                                  <div class = "col-auto">
                                    <b>Rory</b>
                                  </div>
                                  <div class = "col-auto">
                                    Promo :
                                </div>
                                <div class = "col-auto">
                                    <b>2024</b>
                                </div>
                              </div>
                              <br>
                              <div class = "row align-items-center">
                                  <div class = "col-auto">
                                      TAF 2A :
                                  </div>
                                  <div class = "col-auto">
                                      <b>DCL</b>
                                  </div>
                                  <div class = "col-auto">
                                      TAF 3A :
                                  </div>
                                  <div class = "col-auto">
                                      <b>LOGIN</b>
                                  </div>

                            </div>
                              <br>
                              <div class ="row align-items-center">
                                <div class = "col-auto">
                                    PFE : <b>Étude de l'efficacité de la thérapie par l'art pour le traitement de la dépression</b>
                                </div>
                            </div>
                            <br>
                            <div class = "row align-items-center">
                                <div class = "col-auto">
                                    Position:
                                </div>
                                <div class = "col-auto">
                                    <b>Developpeur</b>
                                </div>
                                <div class = "col-auto">
                                    Entreprise:
                                </div>
                                <div class = "col-auto">
                                    <b>Adnovum</b>
                                </div>
                            </div>
                          </div>
                          <button type="submit" class="btn btn-primary" name="modifier">Modifier</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class = "card">
                    <div class="card-body">
                        <form method = "POST">
                            <h4 class="card-header">Rechercher</h4>
                          <div class="mb-3">
                            <label for="Name" class="form-label">Nom</label>
                            <input type="text" class="form-control" id="Name" name="name">
                            <label for="taf1" class="form-label">TAF 2ème année:</label>
                            <input type="text" class="form-control" id="taf1" name="taf1">
                            <label for="taf2" class="form-label">TAF 3ème année:</label>
                            <input type="text" class="form-control" id="taf2" name="taf2">
                            <label for="promo" class="form-label">Promotion :</label>
                            <input type="number" class="form-control" id="promo" name="promo">
                            <label for="stage" class="form-label">Entreprise de stage :</label>
                            <input type="text" class="form-control" id="stage" name="stage">
                            <label for="entreprise" class="form-label">Entreprise actuelle :</label>
                            <input type="text" class="form-control" id="entreprise" name="entreprise">
                          </div>
                          <button type="submit" class="btn btn-primary" name="rechercher">Rechercher</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class = "card">
                    <div class="card-body">
                        <form method = "POST">
                            <h4 class="card-header">Paneau administratif</h4>
                            <br>
                            <br>
                          <button type="submit" class="btn btn-primary" name="ajouterEntreprise">Créer une entreprise</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>