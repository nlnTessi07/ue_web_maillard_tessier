<html>
    <head>
        <title>Modification de données</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <style>
            h1 {text-align: center;}
        </style>
    </head>
    <body>
         <datalist id="Taf">
            {% for taf in tafs %}
                <option value={{taf[0].name}}>
            {% endfor %}
        </datalist>
        <datalist id="Tuteur">
            {% for tuteur in tuteurs %}
                <option value="{{tuteur.name}} {{ tuteur.lastName }}">
            {% endfor %}
        </datalist>
        <datalist id="Position">
            {% for position in positions %}
                <option value={{position.titre}}>
            {% endfor %}
        </datalist>
        <datalist id="Entreprise">
            {% for entreprise in entreprises %}
                <option value={{entreprise[0].name}}>
            {% endfor %}
        </datalist>
        <datalist id="Promo">
            {% for promo in promos %}
                <option value={{promo[0]}}>
            {% endfor %}
        </datalist>
        <HR>
        <h1>Modification des données</h1>
        <HR>
        <div class ="row">
            <div class="col">
                <div class = "card">
                    <div class="card-body">
                        <form method = "POST">
                            <h3 class="card-header">Informations de l'étudiant</h3>
                          <div class="mb-3">
                              <br>
                              <h5>Informations personnelles</h5>
                              <HR>
                              <div class = "row align-items-center">
                                  <div class = "col-auto">
                                      <div class="form-check">
                                          <input class="form-check-input" type="radio" name="Genre" id="mr" checked>
                                          <label class="form-check-label" for="mr">
                                            Mr
                                          </label>
                                        </div>
                                  </div>
                                  <div class = "col-auto">
                                    <div class="form-check">
                                      <input class="form-check-input" type="radio" name="Genre" id="mme">
                                      <label class="form-check-label" for="mme">
                                        Mme
                                      </label>
                                    </div>
                                  </div>
                              </div>
                              <br>
                              <div class="row align-items-center">
                                  <div class = "col-auto">
                                    <label for="Name" class="form-label">Nom :</label>
                                  </div>
                                  <div class = "col-auto">
                                    <input autocomplete="off" type="text" class="form-control" id="Name" name="nom">
                                  </div>
                                  <div class = "col-auto">
                                    <label for="Prenom" class="form-label">Prénom :</label>
                                  </div>
                                  <div class = "col-auto">
                                    <input autocomplete="off" type="text" class="form-control" id="Prenom" name="prenom">
                                  </div>
                              </div>
                              <br>
                              <div class = "row align-items-center">
                                  <div class = "col-auto">
                                    <label for="Date" class="form-label">Date de Naissance :</label>
                                  </div>
                                  <div class = "col-auto">
                                    <input autocomplete="off" type="date" class="form-control" id="Date" name="date">
                                  </div>
                              </div>
                                <br>
                              <HR>
                              <h5>Scolarité</h5>
                              <HR>
                              <div class = "row align-items-center">
                                  <div class = "col-auto">
                                      <label for="taf1" class="form-label">TAF 2A :</label>
                                  </div>
                                  <div class = "col-auto">
                                      <input autocomplete="off" class="form-control" list="Taf" id="taf1" name="tafa2">
                                  </div>
                                  <div class = "col-auto">
                                      <label for="taf1" class="form-label">Année :</label>
                                  </div>
                                  <div class = "col-auto">
                                      <input autocomplete="off" class="form-control" id="taf1annee" name="annee2">
                                  </div>
                              </div>
                              <br>
                              <div class ="row align-items-center">
                                  <div class = "col-auto">
                                      <label for="taf2" class="form-label">TAF 3A :</label>
                                  </div>
                                  <div class = "col-auto">
                                       <input autocomplete="off" class="form-control" list="Taf" id="taf2" name="tafa3">
                                  </div>
                                  <div class = "col-auto">
                                      <label for="taf1" class="form-label">Année :</label>
                                  </div>
                                  <div class = "col-auto">
                                      <input autocomplete="off" class="form-control" id="taf2annee" name="annee3">
                                  </div>
                              </div>
                              <br>
                            <div class = "row align-items-center">
                                <div class = "col-auto">
                                    <label for="promo" class="form-label">Promo :</label>
                                </div>
                                <div class = "col-sm-1">
                                    <input autocomplete="off" class="form-control" list="Promo" id="promo" name="promo">
                                </div>
                            </div>
                              <br>
                              <HR>
                              <h5>Projet de fin d'étude</h5>
                              <HR>
                              <div class="row align-items-center">
                                <div class = "col-sm-1">
                                    <label for="stage" class="form-label">Titre :</label>
                                </div>
                                <div class = "col-sm-11">
                                    <input autocomplete="off" type="text" class="form-control" id="stage" name="stage">
                                </div>
                            </div>
                              <br>
                              <div class = "row align-items-center">
                                  <div class="col-sm-1">
                                      <label for="description" class="form-label">Description :</label>
                                  </div>
                                  <div class = "col-sm-11">
                                      <textarea autocomplete="off" class="form-control" id="description" rows="5" wrap="soft" name="description"></textarea>
                                  </div>
                              </div>
                              <br>
                              <div class="row align-items-center">
                                  <div class="col-sm-1">
                                      <label for="tuteur" class="form-label">Tuteur :</label>
                                  </div>
                                  <div class="col-auto">
                                      <input autocomplete="off" class="form-control" list="Tuteur" id="tuteur" name="tuteur">
                                  </div>
                              </div>
                              <br>
                              <div class="row align-items-center">
                                  <div class="col-sm-1">
                                      <label for="entreprise_stage" class="form-label">Entreprise</label>
                                  </div>
                                  <div class="col-auto">
                                      <input autocomplete="off" class="form-control" list="Entreprise" id="entreprise_stage" name="entreprise_stage">
                                  </div>
                              </div>
                              <br>
                              <HR>
                              <h5>Vie Professionnelle</h5>
                              <HR>
                            <div class = "row align-items-center">
                                <div class = "col-auto">
                                    <label for="position" class="form-label">Position:</label>
                                </div>
                                <div class = "col-auto">
                                    <input autocomplete="off" class="form-control" list="Position" id="position" name="position">
                                </div>
                                <div class = "col-auto">
                                    <label for="aneePosition" class="form-label">Année d'entrée:</label>
                                </div>
                                <div class = "col-auto">
                                    <input autocomplete="off" class="form-control" id="anneePosition" name="anneePosition">
                                </div>
                            </div>
                            <br>
                            <div class = "row align-items-center">
                                <div class = "col-auto">
                                    <label for="entreprise" class="form-label">Entreprise:</label>
                                </div>
                                <div class = "col-auto">
                                    <input autocomplete="off" class="form-control" list="Entreprise" id="entreprise" name="entreprise">
                                </div>
                            </div>
                          </div>
                            <button type="button" class="btn btn-primary" onclick="window.location.href='{{ url_for( 'dashboard' ,isAdmin=True, current_id=current_id ) }}';">Retour</button>
                          <button type="submit" class="btn btn-success">Valider</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>