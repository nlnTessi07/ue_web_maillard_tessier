<html>
    <head>
        <title>Tableau de Bord</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <style>
            h1 {text-align: center;}
        </style>
    </head>
    <body>
        <datalist id="Taf">
            {% for taf in tafss %}
                <option value={{taf[0].name}}>
            {% endfor %}
        </datalist>
        <datalist id="Tuteur">
            {% for tuteur in tuteurs %}
                <option value={{tuteur.name}} {{ tuteur.lastName }}>
            {% endfor %}
        </datalist>
        <datalist id="Position">
            {% for position in positions %}
                <option value={{position.titre}}>
            {% endfor %}
        </datalist>
        <datalist id="Entreprise">
            {% for entreprise in entreprises %}
                <option value={{entreprise[0].name}}>
            {% endfor %}
        </datalist>
        <datalist id="Promo">
            {% for promo in promos %}
                <option value={{promo[0]}}>
            {% endfor %}
        </datalist>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
        <HR>
        <h1>Tableau de bord</h1>
        <HR>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="personnes-tab" data-bs-toggle="tab" data-bs-target="#personnes" type="button" role="tab" aria-controls="personnes" aria-selected="true">Personnes</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="entreprises-tab" data-bs-toggle="tab" data-bs-target="#entreprises" type="button" role="tab" aria-controls="entreprises" aria-selected="false">Entreprises</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="tafs-tab" data-bs-toggle="tab" data-bs-target="#tafs" type="button" role="tab" aria-controls="tafs" aria-selected="false">TAFs</button>
          </li>
            <li class="nav-item" role="presentation">
            <button class="nav-link" id="promos-tab" data-bs-toggle="tab" data-bs-target="#promos" type="button" role="tab" aria-controls="promos" aria-selected="false">Promotions</button>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="personnes" role="tabpanel" aria-labelledby="personnes-tab">
              <nav class="navbar bg-light">
                  <div class="container-fluid">
                      <div class="row align-items-center">
                          <form method="POST">
                              <div class="row align-items-center justify-content-start">
                                  <div class="col-sm-1">
                                  <input autocomplete="off" type="text" class="form-control" id="Name" name="nom" placeholder="Nom">
                                  </div>
                                  <div class="col-1">
                                  <input autocomplete="off" type="text" class="form-control" id="prenom" name="prenom" placeholder="Prénom">
                                  </div>
                                  <div class="col-1">
                                  <input autocomplete="off" class="form-control" list="Taf" id="taf1" name="tafa2" placeholder="Taf">
                                  </div>
                                  <div class="col-1">
                                  <input autocomplete="off" class="form-control" list="Promo" id="promo" name="promo" placeholder="Promo">
                                  </div>
                                  <div class="col-2">
                                  <input autocomplete="off" class="form-control" list="Entreprise" id="satge" name="stage" placeholder="Entreprise de stage">
                                  </div>
                                  <div class="col-1">
                                  <input autocomplete="off" class="form-control" list="Tuteur" id="tuteur" name="tuteur" placeholder="Tuteur">
                                  </div>
                                  <div class="col-2">
                                  <input autocomplete="off" class="form-control" list="Position" id="position" name="position" placeholder="Position Actuelle">
                                  </div>
                                  <div class="col-2">
                                  <input autocomplete="off" class="form-control" list="Entreprise" id="entreprise" name="entreprise" placeholder="Entreprise de actuelle">
                                  </div>
                                  <div class="col-1">
                                      <button class="btn btn-primary" type="submit" name="filtrer">Filtrer</button>
                                  </div>
                              </div>
                              <br>
                              <div class="row justify-content-end">
                                  <div class="col-1">
                                      <button class="btn btn-primary" type="submit" name="addStudent">Ajouter</button>
                                  </div>
                              </div>
                          </form>
                      </div>
                  </div>

              </nav>
              <div class ="row">
                  {% for personne in personnes %}
                    <div class="col-sm-4">
                        <div class = "card">
                            <div class="card-body">
                                <form method = "POST">
                                    <h4 class="card-header">{{ personne[1] }} {{ personne[2]}}</h4>
                                  <div class="mb-3">
                                      <br>
                                      <div class = "row align-items-center">
                                          <div class = "col-auto">
                                              <div class="form-check">
                                                  <input class="form-check-input" type="radio" name="Genre" id="mr" checked disabled>
                                                  <label class="form-check-label" for="mr">
                                                    Mr
                                                  </label>
                                                </div>
                                          </div>
                                          <div class = "col-auto">
                                            <div class="form-check">
                                              <input class="form-check-input" type="radio" name="Genre" id="mme" disabled>
                                              <label class="form-check-label" for="mme">
                                                Mme
                                              </label>
                                            </div>
                                          </div>
                                          <div class = "col-auto">
                                            Date de Naissance :
                                          </div>
                                          <div class = "col-auto">
                                              <b>{{ personne[10] }}</b>
                                          </div>
                                       </div>
                                      <br>
                                      <div class="row align-items-center">
                                          <div class = "col-auto">
                                            Nom :
                                          </div>
                                          <div class = "col-auto">
                                              <b>{{ personne[2] }}</b>
                                          </div>
                                          <div class = "col-auto">
                                            Prénom :
                                          </div>
                                          <div class = "col-auto">
                                            <b>{{ personne[1] }}</b>
                                          </div>
                                          <div class = "col-auto">
                                            Promo :
                                        </div>
                                        <div class = "col-auto">
                                            <b>{{ personne[3] }}</b>
                                        </div>
                                      </div>
                                      <br>
                                      <div class = "row align-items-center">
                                          <div class = "col-auto">
                                              TAF 2A :
                                          </div>
                                          <div class = "col-auto">
                                              <b>{{ personne[4] }}</b>
                                          </div>
                                          <div class = "col-auto">
                                              TAF 3A :
                                          </div>
                                          <div class = "col-auto">
                                              <b>{{ personne[5] }}</b>
                                          </div>
                                    </div>
                                      <br>
                                      <div class ="row align-items-center">
                                        <div class = "col-auto">
                                            PFE : <b>{{ personne[9].titre }}</b>
                                        </div>
                                      </div>
                                    <br>
                                    <div class = "row align-items-center">
                                        <div class = "col-auto">
                                            Position:
                                        </div>
                                        <div class = "col-auto">
                                            <b>{{ personne[8][0] }}</b>
                                        </div>
                                        <div class = "col-auto">
                                            Entreprise:
                                        </div>
                                        <div class = "col-auto">
                                            <b>{{ personne[7][0] }}</b>
                                        </div>
                                    </div>
                                  </div>
                                    <div class = "row align-items-center">
                                        <div class = "col-sm-4">
                                            <button type="button" class="btn btn-primary" onclick="window.location.href='{{ url_for( 'userDetails' ,isAdmin=isAdmin, id=personne[0] ) }}';" >Détails</button>
                                        </div>
                                        {% if isAdmin=="True" %}
                                            <div class = "col-sm-4">
                                                <button type="button" class="btn btn-primary" onclick="window.location.href='{{ url_for( 'userModif' , id=personne[0] ) }}';">Modifier</button>
                                            </div>
                                            <div class = "col-sm-4">
                                                <button type="submit" class="btn btn-danger" name="supprimerEtudiant{{ personne[0] }}">Supprimer</button>
                                            </div>
                                        {% endif %}
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                  {% endfor %}

          </div>
          </div>
          <div class="tab-pane fade" id="entreprises" role="tabpanel" aria-labelledby="entreprises-tab">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nom</th>
                  <th scope="col">Nombre d'employés</th>
                    <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
              {% for entreprise in entreprises %}
                <tr>
                  <th scope="row">{{ entreprise[0].id }}</th>
                  <td>{{ entreprise[0].name }}</td>
                  <td>{{ entreprise[2] }}</td>
                    <td>
                    <button type="submit" class="btn btn-primary" name="detailsEntreprise">Détails</button>
                    <button type="submit" class="btn btn-primary" name="modifEntreprise">Modifier</button>
                    <button type="submit" class="btn btn-danger" name="supprimerEntreprise">Supprimer</button>
                    </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
          <div class="tab-pane fade" id="tafs" role="tabpanel" aria-labelledby="tafs-tab">
              <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nom</th>
                  <th scope="col">Nombre d'éleves</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
              {% for taf in tafs %}
                <tr>
                  <th scope="row">{{ taf[0].id }}</th>
                  <td>{{ taf[0].name }}</td>
                  <td>{{ taf[2] }}</td>
                    <td>
                    <button type="submit" class="btn btn-primary" name="detailsTafs">Détails</button>
                        {% if isAdmin=='True' %}
                            <button type="submit" class="btn btn-primary" name="modifTafs">Modifier</button>
                            <button type="submit" class="btn btn-danger" name="supprimerTafs">Supprimer</button>
                        {% endif%}
                    </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
            <div class="tab-pane fade" id="promos" role="tabpanel" aria-labelledby="promos-tab">
              <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Nom</th>
                  <th scope="col">Nombre d'éleves</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
              {% for promo in promos %}
                <tr>
                  <td>{{ promo[0] }}</td>
                  <td>{{ promo[2] }}</td>
                    <td>
                    <button type="submit" class="btn btn-primary" name="detailsPromo">Détails</button>
                        {% if isAdmin=='True' %}
                    <button type="submit" class="btn btn-primary" name="modifPromo">Modifier</button>
                    <button type="submit" class="btn btn-danger" name="supprimerPromo">Supprimer</button>
                        {% endif %}
                    </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
    </body>
</html>